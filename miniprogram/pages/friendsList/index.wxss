.main {
    width: 97%;
    margin: 0 auto;
}

.item > view{
    box-shadow: 0 5rpx 10rpx 1rpx rgba(97, 96, 96, 0.2);
}

.item image {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    box-shadow: 0 0 10rpx 2rpx rgba(0, 0, 0, .6);
}

.item text {
    padding: 5rpx 30rpx;
    font-family: PingFang SC;
    font-size: 32rpx;
}

.item .btn {
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0;
    top: 0;
    left: 0;
}