/**index.wxss**/
page {
    /*padding-top: 54rpx;*/
    background-color: #f6f6f6;
    padding-bottom: 60rpx;
}

.header {
    width: 150%;
    height: 480rpx;
    margin: 0 auto;
    position: relative;
    background: linear-gradient(90deg, #19CAAD, #A0EEE1);
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
    transform: translateX(-15%);
}

.header image {
    width: 170rpx;
    height: 208rpx;
    position: absolute;
    right: 25%;
    top: 23%;
    transform: scale(.7);
}

.header > view {
    position: absolute;
    top: 23%;
    left: 25%;
    transform: translateY(12rpx);
}

.title, .top_tip {
    font-family: PingFang SC;
    color: #ffffff;
}

.title {
    font-weight: bold;
    font-size: 55rpx;
    padding: 30rpx 0;
}

.top_tip {
    font-size: 30rpx;
    font-weight: 400;
}


.tips {
    background: #fff;
    width: 85%;
    height: 200rpx;
    position: absolute;
    top: 480rpx;
    transform: translateY(-70%);
    border-radius: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;

    padding: 20rpx 25rpx;
    box-shadow: 0 3px 5px 1px rgba(0, 0, 0, .2);
}

.tips .tips-t {
    width: calc(100% - 72rpx);
    height: 35%;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(0, 0, 0, .1);
    position: relative;
}

.tips .tips-t image {
    height: 80rpx;
}

.tips .tips-t .arrow {
    height: 48rpx;
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate(-50%, -50%);
}

.tips:active {
    background: #727272;
}

.tips:active text {
    color: #ffffff !important;
}

.tips:active .tips-t {
    border-bottom: 1px solid rgba(250, 250, 250, 0.7);
}

.tips .tips-t text {
    padding: 0 12rpx;
    font-size: 35rpx;
}

.tips .tips-b {
    width: 100%;
    height: 65%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.tips .tips-b view {
    padding: 5rpx 0 0 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tips .tips-b view text:nth-of-type(1) {
    font-size: 32rpx;
    color: rgba(0, 0, 0, .6);
}

.tips .tips-b view text:nth-of-type(2) {
    font-weight: bold;
    padding: 5rpx;
}


.main {
    margin-top: 100rpx;
    width: 90%;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}

.main .item image {
    width: 64rpx;
    height: 64rpx;
    margin: 0 32rpx 0 16rpx;
}

.main .item > view {
    border-radius: 20rpx !important;
    box-shadow: 0 5rpx 5rpx 2rpx rgba(0, 0, 0, .2);
}


.environment {
    color: rgba(0, 0, 0, 0.4);
    font-size: 24rpx;
    bottom: 10rpx;
    position: absolute;
}